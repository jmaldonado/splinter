<h1><%= @title %></h1>
<%= form_for :attachments, :url => attachments_path, :html => { :enctype => "multipart/form-data" } do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="field">
    <label for="attachments_sender_name">Your Name</label><br />
    <%= f.text_field :sender_name %>
  </div>
  <div class="field">
    <label for="attachments_sender_email">Your email address</label><br />
    <%= f.text_field :sender_email %>
  </div>
  <div class="field">
    <label for="attachments_recip_name">Recipient's name</label><br />
    <%= f.text_field :recipient_name %>
  </div>
  <div class="field">
    <label for="attachments_recip_email">Recipient's email address</label><br />
    <%= f.text_field :recipient_email %>
  </div>
  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </div>
  <div class="field">
    <%= f.label :attach %><br />
    <%= f.file_field :attach %>
  </div>
  <div class="submit">
    <%= f.submit "Create" %>
  </div>
<% end %>
